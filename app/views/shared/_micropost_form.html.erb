<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="filed">
    <%= f.text_area :content, placeholder: t(".placeholder") %>
  </div>

  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.picture_type %>
  </span>
<% end %>
